/* pages/deliver/deliver.wxss */
page{
    height: 100%;
}
.deliver-wrap{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.main-list{
    flex: 1;
    height: 100%;
}
swiper-item {
    overflow: scroll;
    height: 100%;
}
.deliver-nav{

}
.deliver-nav ul{
    display: flex;
    justify-content: space-around;
    background-color: #efefef;
    font-size: 11pt;
    color: gray;
}
.deliver-nav ul li{
    line-height: 230%;
    width: 25%;
    text-align: center;
    border-right: 1px solid #b2b2b2;
}
.last{
     border-right: none !important;
}
.avtivity{
    color: #e58026;
    border-bottom: 2px solid #e58026;
}

/*投递成功*/
.deliver_list{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: auto;
    width: 94%;
    border-bottom:  1px solid #e5e5e5;
    line-height: 150%;
}
.deliver_list .left{
    width: 60%;
}
.deliver_list .left .name{
    padding-top: 10rpx;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.deliver_list .left .hotal_name{
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #666666;
    font-size: 12pt;
}
.deliver_list .left .time{
    font-size: 11pt;
    color: #b5b5b5;
}
.deliver_list .right .clock {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.deliver_list .right .clock image{
    width: 60rpx;
    height: 60rpx;
}
.deliver_list .right text{
    font-size: 11pt;
    color: #b5b5b5;
}
