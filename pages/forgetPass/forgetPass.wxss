/* pages/forgetPass/forgetPass.wxss */
page{
    height: 100%;
}
.img1{
    width: 50rpx;
    height: 50rpx;
}
.img2{
    border: 1px solid red;
    width: 80%;
    height: 60rpx;
}
.forgetPass_wrap{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.main-list{
    margin: 30rpx auto 0;
    width: 94%;
    flex: 1;
    height: 100%;
}
swiper-item{
    height: 100%;
}
.forgetPass-nav{
position: relative;
}
.forgetPass-nav ul{
    width: 94%;
    margin: 0 auto;
    margin-top: 60rpx;
    display: flex;
    justify-content: space-between;
}
.forgetPass-nav ul li{
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #353535;
    background-color: #e5e5e5;
    border-radius: 6rpx;
    width: 49%;
}
.forgetPass-nav text{
    display: block;
    position: absolute;
    left: 350rpx;
    top: 70rpx;
    width: 45rpx;
    height: 45rpx;
    line-height: 35rpx;
    text-align: center;
    background-color: #fff;
    border-radius: 30rpx;
    color: #ccc;
}
.avtivity{
    background-color: #e58026 !important;
    color: #fff !important;
}
.main-list text{
    text-align: justify;
    color: #e58026;
    font-size: 12pt;
    width: 100%;
}
.placeholder{
    color: #b2b2b2;
}
.forgetPass_phoneNum{
    border: 1px solid #e5e5e5;
    padding-left: 10rpx;
    border-radius: 6rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    color: #888888;
}
.forgetPass_phoneNum input{
    width: 78%;
    padding-left: 10rpx;
}
.forgetPass_code{
    margin: 0 auto;
    margin-top: 30rpx;
    display: flex;
}
.forgetPass_code .left{
    border: 1px solid #e5e5e5;
    border-radius: 6rpx;
    padding-left: 10rpx;
    width: 55%;
    color: #888888;
    display: flex;
    align-items: center;
    height: 80rpx;
}
.forgetPass_code .left input{
    width: 60%;
    padding-left: 10rpx;
}
.forgetPass_code .right{
    width: 45%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.forgetPass_massage{
    margin: 0 auto;
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
}
.forgetPass_massage .left{
    border: 1px solid #e5e5e5;
    border-radius: 6rpx;
    padding-left: 10rpx;
    width: 65%;
    color: #888888;
    display: flex;
    align-items: center;
    height: 80rpx;
}
.forgetPass_massage .left input{
    width: 65%;
    padding-left: 10rpx;
}
.forgetPass_massage .right{
    color: #fff;
    background-color: #ffb81e;
    line-height: 80rpx;
    padding: 0 15rpx;
}
.porgetPass_newPass,.porgetPass_sure_newPass,.porgetPass_mail{
    border: 1px solid #e5e5e5;
    padding-left: 10rpx;
    border-radius: 6rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    color: #888888;
}
.porgetPass_newPass input,.porgetPass_sure_newPass input{
    width: 95%;
    padding-left: 10rpx;
}
.register_sure{
    color: #fff;
    margin-top: 30rpx;
    background-color: #e58026;
    height: 90rpx;
    line-height: 90rpx;
}
.porgetPass_mail input{
    width: 60%;
    padding-left: 10rpx;
}