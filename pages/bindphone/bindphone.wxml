<!--pages/bindphone/bindphone.wxml-->
<view class="bindphone_wrap">
    <form bindsubmit="formSubmit">
        <view class="register_phoneNum">
            <input name="phoneNum" placeholder-class="placeholder" placeholder="手机号码"/>
        </view>
        <view class="register_code">
            <view class="left">
                <input name="picture_code" placeholder-class="placeholder" placeholder="图形码"/>
            </view>
            <view class="right">
                <image class="img2" src=""></image>
                <image class="img1" src="../register/image/shuaxin.png"></image>
            </view>
        </view>
        <view class="register_massage">
            <view class="left">
            <input name="massage_code" placeholder-class="placeholder" placeholder="验证码"/>
            </view>
            <view class="right">
                获取验证码
            </view>
        </view>
        <button formType="submit" class="save_btn">绑定</button>
    </form>
</view>