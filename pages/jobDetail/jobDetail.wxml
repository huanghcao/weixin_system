<!--pages/jobDetail/jobDetail.wxml-->
<view class="jobDetail_wrap position_detail">
     <view class="position_name">{{position.name}}</view>
        <view class="position_salary">{{position.salary}}</view>
        <view class="position_company">{{position.company}}</view>
        <ul class="position_box">
            <li class="time"><image class="image1" src="image/_01.png"></image>{{position.time}}</li>
            <li><image class="image1" src="image/_02.png"></image>{{position.people_country}}</li>
            <li><image class="image1" src="image/_03.png"></image>{{position.education}}</li>
            <li><image class="image1" src="image/_04.png"></image>{{position.fili}}</li>
            <li><image class="image1" src="image/_05.png"></image>{{position.date}}</li>
        </ul>
        <ul class="p_d_box">
            <li><view>工作地点</view>{{position.action}}</li>
            <li><view>工作经验</view>{{position.work_long}}</li>
            <li><view>工作性质</view>{{position.position_type}}</li>
        </ul>
        <view class="p_d_detail">岗位描述</view>
        <view class="p_description">{{position.position_detail}}</view>
        <!--举报职位-->
        <view></view>
        <!--其他推荐职位-->
        <view class="p_d_detail">其他推荐职位</view>
        <view class="remenList">
            <block wx:for="{{otherList}}">
            <navigator redirect="true" url="../jobDetail/jobDetail">
                    <view class="list" id="{{item.id}}">
                        <!--<image class="hotImg" src="image/hot.png"></image>-->
                        <view class="left">
                            <view class="positionName">{{item.positionName}}</view>
                            <view class="conpany">{{item.conpany}}</view>
                            <view class="time">{{item.time}}</view>
                        </view>
                        <view class="right">
                            <view class="money">{{item.money}}</view>
                            <view>{{item.action}}</view>
                        </view>
                    </view>
            </navigator>
            </block>
        </view>
        <view class="user_box">
            <view class="left">
                <view>
                    <image class="image2" src="image/_06.png"></image>
                    收藏
                </view>
                <!--<view>
                    <image class="image2" src="image/_07.png"></image>
                    匹配度
                </view>-->
                <!--<view>
                    <image class="image2" src="image/_08.png"></image>
                    竞争度
                </view>-->
            </view>
            <view class="right">
                <view>立即申请</view>
            </view>
        </view>

</view>
